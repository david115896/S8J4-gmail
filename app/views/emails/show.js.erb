
if (document.querySelector(".card") != null) {
    document.querySelector(".card").remove();
};

lines = document.getElementsByTagName("tr");

for(count = 1; count <lines.length; count++){
    if (lines[count].getElementsByTagName("a")[0].text == "<%=@email.object%>") {
       pos=count;
       if (lines[count].getElementsByTagName("a")[0].classList.contains("text-white") == false) {
       lines[count].getElementsByTagName("a")[0].classList.add("text-white");
       }
    }
};


document.getElementsByTagName("tr")[pos].insertAdjacentHTML("beforeend", "<%= j render 'card', card: @email %>");
