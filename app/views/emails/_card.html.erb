<div class="card bg-dark m-2" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%=@email.object%></h5>
    <p class="card-text"><%=@email.body%></p>
    
    <%= link_to 'Supprimer', email_path(@email.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "mr-3",remote: true %>
    <%= link_to 'Marquer comme non-lu', email_path(@email.id), method: :put, class: "mr-3",remote: true %>
  </div>
</div>